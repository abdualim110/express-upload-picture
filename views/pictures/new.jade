extends ../layout

block content
  h1.
    #{title}
  form#formAddPicture(ref='formAddPicture', action='/pictures', method='post', enctype='multipart/form-data')
    .form-horizontal
      .form-group
        label(class="control-label col-sm-2") Name
        .col-sm-6
          input#inputName(type="text", placeholder="ex. John Smith", name="name", class="form-control", required="required")
    .form-horizontal
      .form-group
        label(class="control-label col-sm-2") File
        .col-sm-6
          input#inputFile(type='file', name='sampleFile')
      .form-group
        .col-sm-2
        .col-sm-6
          button#btnSubmit(type='submit', class="btn btn-default") Submit
